<div class="well">
  <form class="form-horizontal" role="form">
    <div class="form-group" id="name">
      <label class="col-lg-4 control-label" for="name">Name:</label>
      <div class="col-lg-8">
        <input class="form-control" name="name" />
        <div class="help-block">
          may only include letters, numbers, hyphons, and underscores
        </div>
      </div>
    </div>
    <div class="form-group" id="location">
      <label class="col-lg-4 control-label" for="location">Select Location:</label>
      <div class="col-lg-8">
        <input class="form-control" name="location" type="file" nwdirectory />
        <div class="help-block">
          must be an empty directory
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-offset-4 col-lg-8">
        <button type="submit" class="btn btn-default">Create Project</button>
        <button type="reset" class="btn">Cancel</button>
      </div>
    </div>
  </form>
</div>